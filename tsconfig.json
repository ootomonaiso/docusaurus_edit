{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "dist",
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node", "vscode", "mocha"]
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
